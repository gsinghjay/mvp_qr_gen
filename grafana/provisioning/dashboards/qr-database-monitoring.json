{
  "id": null,
  "title": "QR Database Monitoring",
  "tags": ["qr-system", "database", "postgres", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "ðŸ’¾ Database Overview",
      "type": "text",
      "gridPos": {"h": 3, "w": 24, "x": 0, "y": 0},
      "options": {
        "mode": "markdown",
        "content": "# Database Monitoring Dashboard\n\n**Purpose**: Monitor PostgreSQL database performance, connections, and QR-specific table metrics for both production and test environments.\n\nðŸ“Š **Data Sources**: PostgreSQL Production & Test databases"
      }
    },
    {
      "id": 2,
      "title": "Production DB - QR Code Count",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 3},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT COUNT(*) as count FROM qr_codes",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "displayName": "Total QR Codes",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "title": "Test DB - QR Code Count",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 3},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-test"
          },
          "rawSql": "SELECT 0 as count",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "displayName": "Test QR Codes",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 4,
      "title": "Database Connections",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 3},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT count(*) as connections FROM pg_stat_activity WHERE datname = 'qrdb'",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "displayName": "Active Connections",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 20}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 5,
      "title": "QR Codes Created Over Time (Production)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 9},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT \n  $__timeGroup(created_at, '1h') as time,\n  COUNT(*) as qr_codes_created\nFROM qr_codes \nWHERE $__timeFilter(created_at)\nGROUP BY 1\nORDER BY 1",
          "format": "time_series",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "single"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 6,
      "title": "QR Types Distribution (Production)",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 9},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT \n  qr_type as metric,\n  COUNT(*) as value\nFROM qr_codes \nGROUP BY qr_type",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie",
        "tooltip": {"mode": "single"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 7,
      "title": "Recent QR Codes (Last 7 days)",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 17},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT \n  short_id,\n  qr_type,\n  created_at,\n  redirect_url\nFROM qr_codes \nWHERE created_at > NOW() - INTERVAL '7 days'\nORDER BY created_at DESC\nLIMIT 20",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "basic"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Database Performance Metrics",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 17},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT \n  schemaname,\n  tablename,\n  n_tup_ins as inserts,\n  n_tup_upd as updates,\n  n_tup_del as deletes,\n  n_live_tup as live_rows\nFROM pg_stat_user_tables \nWHERE schemaname = 'public'\nORDER BY n_live_tup DESC",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "basic"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "live_rows"},
            "properties": [
              {"id": "custom.displayMode", "value": "color-background"},
              {"id": "thresholds", "value": {
                "steps": [
                  {"color": "green", "value": null},
                  {"color": "yellow", "value": 1000},
                  {"color": "red", "value": 10000}
                ]
              }}
            ]
          }
        ]
      }
    },
    {
      "id": 9,
      "title": "Database Size",
      "type": "stat",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT pg_database_size('qrdb') as size_bytes",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "displayName": "Database Size"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 10,
      "title": "QR Code Growth Trend",
      "type": "timeseries", 
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres-prod"
          },
          "rawSql": "SELECT \n  DATE_TRUNC('day', created_at) as time,\n  COUNT(*) as total_qr_codes\nFROM qr_codes \nWHERE $__timeFilter(created_at)\nGROUP BY 1\nORDER BY 1",
          "format": "time_series",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "displayName": "Daily QR Code Count"
        }
      },
      "options": {
        "tooltip": {"mode": "single"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    }
  ],
  "links": [
    {
      "title": "System Health",
      "url": "/d/health/qr-system-health",
      "type": "dashboards"
    },
    {
      "title": "Infrastructure Deep Dive",
      "url": "/d/infrastructure/qr-infrastructure-deep-dive",
      "type": "dashboards"
    }
  ]
} 