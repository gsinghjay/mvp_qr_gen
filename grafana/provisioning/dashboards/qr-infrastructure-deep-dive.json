{
  "id": null,
  "title": "QR Infrastructure Deep Dive",
  "tags": ["qr-system", "infrastructure", "containers", "database"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-3h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "üèóÔ∏è Infrastructure Overview",
      "type": "text",
      "gridPos": {"h": 3, "w": 24, "x": 0, "y": 0},
      "options": {
        "mode": "markdown",
        "content": "# Infrastructure Deep Dive Dashboard\n\n**Purpose**: Monitor container resources, database performance, and edge router metrics for comprehensive system visibility.\n\nüìä **Metrics Sources**: Traefik, Application, and Container metrics (cAdvisor/node_exporter when available)"
      }
    },
    {
      "id": 2,
      "title": "Traefik Request Distribution",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 3},
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{service=\"api-service@file\"}[5m])) * 60 or vector(0)",
          "legendFormat": "API Service RPM",
          "refId": "A"
        },
        {
          "expr": "sum(rate(traefik_entrypoint_requests_total[5m])) by (entrypoint) * 60 or vector(0)",
          "legendFormat": "{{entrypoint}} EntryPoint",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 3,
      "title": "Traefik Response Times",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 3},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(traefik_service_request_duration_seconds_bucket{service=\"api-service@file\"}[1h])) by (le)) * 1000 or vector(0)",
          "legendFormat": "API Service P95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(traefik_service_request_duration_seconds_bucket{service=\"api-service@file\"}[1h])) by (le)) * 1000 or vector(0)",
          "legendFormat": "API Service P50",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(traefik_entrypoint_request_duration_seconds_bucket[1h])) by (le, entrypoint)) * 1000 or vector(0)",
          "legendFormat": "{{entrypoint}} P95",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 4,
      "title": "Traefik Error Rates",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 11},
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{service=\"api-service@file\", code=~\"5..\"}[1h])) / sum(rate(traefik_service_requests_total{service=\"api-service@file\"}[1h])) * 100 or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "displayName": "5xx Error Rate",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 5,
      "title": "Traefik Open Connections",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 11},
      "targets": [
        {
          "expr": "sum(traefik_service_open_connections{service=\"api-service@file\"}) or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "displayName": "Open Connections",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 6,
      "title": "TLS Connections",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 11},
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_tls_total{service=\"api-service@file\"}[5m])) * 60 or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "displayName": "TLS Requests/min",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 7,
      "title": "Container CPU Usage (Estimated)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 17},
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"qr_generator_api\"}[5m])) by (name) * 100 or vector(0)",
          "legendFormat": "API Container CPU %",
          "refId": "A"
        },
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"qr_generator_postgres\"}[5m])) by (name) * 100 or vector(0)",
          "legendFormat": "PostgreSQL CPU %",
          "refId": "B"
        },
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"qr_generator_traefik\"}[5m])) by (name) * 100 or vector(0)",
          "legendFormat": "Traefik CPU %",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 8,
      "title": "Container Memory Usage (Estimated)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 17},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"qr_generator_api\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "API Container MB",
          "refId": "A"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"qr_generator_postgres\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "PostgreSQL MB",
          "refId": "B"
        },
        {
          "expr": "container_memory_usage_bytes{name=\"qr_generator_traefik\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "Traefik MB",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 9,
      "title": "Database Connection Patterns",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"qrdb\", state=\"active\"} or vector(0)",
          "legendFormat": "Active Connections",
          "refId": "A"
        },
        {
          "expr": "pg_stat_activity_count{datname=\"qrdb\", state=\"idle\"} or vector(0)",
          "legendFormat": "Idle Connections",
          "refId": "B"
        },
        {
          "expr": "pg_stat_activity_count{datname=\"qrdb\", state=\"idle in transaction\"} or vector(0)",
          "legendFormat": "Idle in Transaction",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 10,
      "title": "Database Performance Metrics",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_xact_commit{datname=\"qrdb\"}[5m]) + rate(pg_stat_database_xact_rollback{datname=\"qrdb\"}[5m])) or vector(0)",
          "legendFormat": "Transactions/sec",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_tup_inserted{datname=\"qrdb\"}[5m]) or vector(0)",
          "legendFormat": "Inserts/sec",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated{datname=\"qrdb\"}[5m]) or vector(0)",
          "legendFormat": "Updates/sec",
          "refId": "C"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{datname=\"qrdb\"}[5m]) or vector(0)",
          "legendFormat": "Deletes/sec",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 11,
      "title": "Application Go Runtime Metrics",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 33},
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes{job=\"qr-app\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "Allocated Memory MB",
          "refId": "A"
        },
        {
          "expr": "go_memstats_sys_bytes{job=\"qr-app\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "System Memory MB",
          "refId": "B"
        },
        {
          "expr": "rate(go_gc_duration_seconds_sum{job=\"qr-app\"}[5m]) * 1000 or vector(0)",
          "legendFormat": "GC Duration ms/sec",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "id": 12,
      "title": "System Resource Summary",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 33},
      "targets": [
        {
          "expr": "up{job=~\"prometheus|qr-app|traefik\"} or vector(0)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "basic"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [
              {"id": "displayName", "value": "Status"},
              {"id": "unit", "value": "short"},
              {"id": "custom.displayMode", "value": "color-background"},
              {"id": "thresholds", "value": {
                "steps": [
                  {"color": "red", "value": null},
                  {"color": "green", "value": 1}
                ]
              }}
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "Time": true
            },
            "indexByName": {},
            "renameByName": {}
          }
        }
      ]
    }
  ],
  "links": [
    {
      "title": "System Health",
      "url": "/d/health/qr-system-health",
      "type": "dashboards"
    },
    {
      "title": "Analytics Deep Dive",
      "url": "/d/analytics/qr-analytics-deep-dive",
      "type": "dashboards"
    }
  ]
} 